package templates

templ ShareControls(roomID string) {
	<div class="share-controls" x-data="roomSharing()">
		<button @click="showShareModal = true" class="btn-share">
			ðŸ”— Share
		</button>
		<!-- Share Modal -->
		<div x-show="showShareModal" class="modal" @click.self="showShareModal = false">
			<div class="modal-content share-modal">
				<div class="modal-header">
					<h2>Share Room</h2>
					<button @click="showShareModal = false" class="btn-close">âœ•</button>
				</div>
				<div class="qr-code-container">
					<img src={"/room/" + roomID + "/qr"} alt="QR Code" class="qr-code-image"/>
				</div>
				<div class="share-link-container">
					<input
						type="text"
						readonly
						:value="window.location.href"
						@click="$event.target.select()"
						class="share-link-input"
					/>
					<button @click="copyUrl()" class="btn-copy">
						<span x-show="!copied">ðŸ“‹ Copy</span>
						<span x-show="copied">âœ“ Copied!</span>
					</button>
				</div>
			</div>
		</div>
	</div>
}
