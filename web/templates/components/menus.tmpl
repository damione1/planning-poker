{{ define "dashmenu" }}
<!-- Dashboard Menu Bar -->
<div class="border-b border-gray-200 dark:border-gray-800 bg-gray-50 dark:bg-black">
	<div class="max-w-screen-xl w-full px-3 mx-auto max-w-8xl lg:px-3">
		<ul class="flex flex-wrap -mb-px -ml-4">

			<li class="mr-2">
				<a class="inline-flex rounded-t-lg py-4 px-4 text-sm font-medium text-center group {{ if eq .Selected "download" }}border-b-2 dark:border-blue-500 border-blue-600 text-blue-600 dark:text-blue-500 dark:hover:text-blue-500{{ else }}text-gray-500 dark:text-gray-400{{ end }}"
					href="/app/download">
					Download
				</a>
			</li>

			<li class="mr-2">
				<a class="inline-flex rounded-t-lg py-4 px-4 text-sm font-medium text-center group {{ if eq .Selected "invite" }}border-b-2 dark:border-blue-500 border-blue-600 text-blue-600 dark:text-blue-500 dark:hover:text-blue-500{{ else }}text-gray-500 dark:text-gray-400{{ end }}"
					href="/app/invite">
					GitHub
				</a>
			</li>


			<li class="mr-2">
				<a class="inline-flex rounded-t-lg py-4 px-4 text-sm font-medium text-center group {{ if eq .Selected "chat" }}border-b-2 dark:border-blue-500 border-blue-600 text-blue-600 dark:text-blue-500 dark:hover:text-blue-500{{ else }}text-gray-500 dark:text-gray-400{{ end }}"
					href="/app/chat">
					Chat
				</a>
			</li>

			<li class="mr-2">
				<a class="inline-flex rounded-t-lg py-4 px-4 text-sm font-medium text-center group {{ if eq .Selected "tasks" }}border-b-2 dark:border-blue-500 border-blue-600 text-blue-600 dark:text-blue-500 dark:hover:text-blue-500{{ else }}text-gray-500 dark:text-gray-400{{ end }}"
					href="/app/tasks">
					Tasks
				</a>
			</li>

		</ul>
	</div>
</div>
{{ end }}
