# Example Terraform variables file
# Copy this file to terraform.tfvars and customize for your deployment

# AWS Configuration
aws_region        = "us-east-1"
availability_zone = "us-east-1a"

# Instance Configuration
instance_name = "planning-poker-prod"
blueprint_id  = "ubuntu_24_04"
bundle_id     = "nano_3_0" # $3.50/month - 512MB RAM, 1 vCPU, 20GB SSD

# SSH Configuration
ssh_key_name         = "planning-poker-key"
ssh_public_key_path  = "~/.ssh/id_rsa.pub"
allowed_ssh_cidrs    = ["0.0.0.0/0"] # ⚠️ Restrict to your IP in production!

# Application Configuration
app_port           = 8090
ws_allowed_origins = "*" # Configure with actual domain: "poker.example.com,www.poker.example.com"

# Optional: Domain name for DNS configuration
# domain_name = "poker.example.com"

# Network Configuration
enable_static_ip = true

# Resource Tags
tags = {
  Project     = "planning-poker"
  Environment = "production"
  ManagedBy   = "terraform"
  Owner       = "your-name"
}
